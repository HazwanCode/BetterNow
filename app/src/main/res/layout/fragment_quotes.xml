<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif"
            android:text="Journal"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#FFC107"
            app:cardCornerRadius="30dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="It helps you get to know yourself better and bring your thoughts and feelings to the surface."
                android:textAlignment="center"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_below="@id/cv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#FFC107"
            app:cardCornerRadius="30dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            app:cardCornerRadius="25dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:text="When we write things down, they feel more manageable"
                android:textAlignment="center"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:layout_below="@id/cv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#FFC107"
            app:cardCornerRadius="40dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            app:cardCornerRadius="40dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="330dp"
                android:layout_height="75dp"
                android:text=" If you log how you feel every day, you may spot things that trigger your depression"
                android:textAlignment="center"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Add New Entry"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>